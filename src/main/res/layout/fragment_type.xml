        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/right_view"
        android:background="#FFFFFF"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="match_parent">
